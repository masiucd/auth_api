// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Shoe {
  id        Int      @id @default(autoincrement())
  name      String
  brand     String
  price     Int
  size      Int[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("shoes")
}
