{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "types": ["types.d.ts"],
    "paths": {
      "$root": ["."],
      "$db": ["db/*"],
      "$controllers": ["controllers/*"],
      "$routes": ["routes/*"],
      "$persistence": ["persistance/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
